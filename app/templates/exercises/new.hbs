<form class="form-inline" {{action 'saveNewExercise' this on='submit'}}>
  <div class="form-group">
    {{input value=newExerciseName placeholder='Name' class='form-control'}}
  </div>

  <div class="form-group">
    {{input value=newExerciseDuration placeholder='Reps or Time' class='form-control'}}
  </div>

  <div class="form-group">
    {{input value=newExerciseWeight placeholder='Weight' class='form-control'}}
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Add Exercise
    </button>
  </div>
</form>
